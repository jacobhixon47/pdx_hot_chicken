<%= form_for @product do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p><br>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => 10, :cols => 40 %>
  </p><br>
  <p>
    <%= f.file_field :image, :id => 'pictureInput' %>
  </p>
  <p>
    <%= f.submit :class => 'btn btn-success' %>
  </p>
<% end %>

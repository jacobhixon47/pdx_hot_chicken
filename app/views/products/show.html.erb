<h1><%= @product.name %></h1>
<%= image_tag @product.image.url(:medium) %>
<h4><%= @product.description %></h4>
<hr>
<%= link_to products_path do %>
  <button type="button" class="btn btn-info">Back</button>
<% end %>

<% if current_user.admin === true %>
  <%= link_to edit_product_path(@product) do %>
    <button type="button" class="btn btn-warning">Edit</button>
  <% end %>
  <%= link_to product_path(@product), :data => {
                                        :confirm => 'Are you sure you wish to delete this product?',
                                        :method => 'delete' } do %>
    <button type="button" class="btn btn-danger">Delete</button>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <%= link_to new_product_review_path(@product) do %>
    <button type="button" class="btn btn-success">Post Review</button>
  <% end %>
<% end %>
<hr>
<h2>Reviews</h2>
<% if @product.reviews.any? %>
  <% @product.reviews.each do |review| %>
    <p class="review">
      <%= link_to review.user.username, user_path(review.user) %><br>
      <%= review.content %><br>
      <% if current_user.admin? %>
        <%= link_to "Delete Review", product_review_path(@product, review), :data => {
        :confirm => 'Are you sure you want to delete this comment?',
        :method => 'delete' } %>
      <% end %>
    </p>
  <% end %>
<% else %>
  <h4>No Reviews Yet!</h4>
<% end %>
